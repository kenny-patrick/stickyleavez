            #reviews.tab-pane(role='tabpanel')
                - var reviews = []
                - reviews.push({name: 'Han Solo', role: 'founder', image: 'img/person-1.jpg', date: 'Dec 2018', stars: 5})
                - reviews.push({name: 'Luke Skywalker', role: 'CTO', image: 'img/person-2.jpg', date: 'Dec 2018', stars: 4})
                - reviews.push({name: 'Princess Leia', role: 'Team Leader', image: 'img/person-3.jpg', date: 'Dec 2018', stars: 3})
                - reviews.push({name: 'Jabba Hut', role: 'Lead developer', image: 'img/person-4.jpg', date: 'Dec 2018', stars: 5})
                
                - stars = [1,2,3,4,5]

                .row.mb-5
                    .col-lg-10.col-xl-9
                        each val, index in reviews
                            .media.review
                                .text-center.mr-4.mr-xl-5
                                    img.review-image(src=val.image, alt=val.name)
                                    span.text-uppercase.text-muted #{val.date}
                                .media-body
                                    h5.mt-2.mb-1 #{val.name}
                                    .mb-2
                                        for star, starIndex in stars
                                            if (starIndex + 1 <= val.stars)
                                                i.fa.fa-xs.fa-star.text-warning
                                            else
                                                i.fa.fa-xs.fa-star.text-gray-200
                                    p.text-muted #{dummyText[index]}     

                        
                        .py-5.px-3
                            h5.text-uppercase.mb-4 Leave a review

                            form(id="contact-form", method="post", action="contact.php",class="form")
                                .row
                                    .col-sm-6
                                        .form-group
                                            label.form-label(for="name") Your name *
                                            input(type="text", name="name", id="name", class="form-control", placeholder="Enter your name", required="required")
                                    .col-sm-6
                                        .form-group
                                            label.form-label(for="rating") Your rating *
                                            select.custom-select.focus-shadow-0(name="rating", id="rating")
                                                option(value='5') &#9733;&#9733;&#9733;&#9733;&#9733; (5/5)
                                                option(value='4') &#9733;&#9733;&#9733;&#9733;&#9734; (4/5)
                                                option(value='3') &#9733;&#9733;&#9733;&#9734;&#9734; (3/5)
                                                option(value='2') &#9733;&#9733;&#9734;&#9734;&#9734; (2/5)
                                                option(value='1') &#9733;&#9734;&#9734;&#9734;&#9734; (1/5)

                                .form-group
                                    label.form-label(for="email") Your email *
                                    input(type="email", name="email", id="email", class="form-control", placeholder="Enter your  email", required="required")
                                .form-group
                                    label.form-label(for="review") Review text *
                                    textarea(rows="4", name="review", id="review", class="form-control", placeholder="Enter your review", required="required")
                                
                                button(type="submit", class="btn btn-outline-dark") Post review