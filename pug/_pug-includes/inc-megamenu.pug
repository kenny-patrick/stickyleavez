                            +megamenuList('Components', componentLinks)

                            
                    .row.megamenu-services.d-none.d-lg-flex
                        .col-xl-3.col-lg-6.d-flex
                            .megamenu-services-item
                                +svgIcon('delivery-time-1', 'megamenu-services-icon')
                                div
                                    h6.text-uppercase Free shipping &amp; return
                                    p.mb-0.text-muted.text-sm Free Shipping over $300
                            
                        .col-xl-3.col-lg-6.d-flex
                            .megamenu-services-item
                                +svgIcon('money-1', 'megamenu-services-icon')
                                div
                                    h6.text-uppercase Money back guarantee
                                    p.mb-0.text-muted.text-sm 30 Days Money Back
                            
                        .col-xl-3.col-lg-6.d-flex
                            .megamenu-services-item
                                +svgIcon('customer-support-1', 'megamenu-services-icon')
                                div
                                    h6.text-uppercase 020-800-456-747
                                    p.mb-0.text-muted.text-sm 24/7 Available Support
                    
                        .col-xl-3.col-lg-6.d-flex
                            .megamenu-services-item
                                +svgIcon('secure-payment-1', 'megamenu-services-icon')
                                div
                                    h6.text-uppercase Secure Payment
                                    p.mb-0.text-muted.text-sm Secure Payment

            .col-lg-3.d-none.d-lg-block
                img.bg-image(src=path + "img/megamenu.jpg", alt="")

