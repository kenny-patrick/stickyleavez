.cart
    .cart-header.text-center
        .row
            .col-md-5 Item
            .col-md-7.d-none.d-md-block
                .row
                    .col-md-3 Price
                    .col-md-4 Quantity
                    .col-md-3 Total
                    .col-md-2
    
    include inc-var-basketitems.pug

    .cart-body
        each val in basketProducts
            // Product
            .cart-item
                .row.d-flex.align-items-center.text-left.text-md-center
                    .col-12.col-md-5
                        a(href="#").cart-remove.close.mt-3.d-md-none
                            i.fa.fa-times                                                                                    
                        .d-flex.align-items-center
                            a(href="detail.html")
                                img.cart-item-img(src=val.image, alt="...")
                            .cart-title.text-left
                                a.text-uppercase.text-dark(href="detail.html")
                                    strong #{val.name}
                                br
                                span.text-muted.text-sm Size: #{val.size}
                                if (val.color)
                                    br
                                    span.text-muted.text-sm Colour: #{val.color}
                    .col-12.col-md-7.mt-4.mt-md-0
                        .row.align-items-center
                            .col-md-3
                                .row
                                    .col-6.d-md-none.text-muted Price per item
                                    .col-6.col-md-12.text-right.text-md-center #{val.itemPrice}
                            .col-md-4
                                .row.align-items-center
                                    .d-md-none.col-7.col-sm-9.text-muted Quantity
                                    .col-5.col-sm-3.col-md-12
                                        .d-flex.align-items-center
                                            .btn.btn-items.btn-items-decrease -
                                            input(type="text", value=val.items, class="form-control text-center border-0 border-md input-items")
                                            .btn.btn-items.btn-items-increase +
                            .col-md-3 
                                .row
                                    .col-6.d-md-none.text-muted Total price 
                                    .col-6.col-md-12.text-right.text-md-center #{val.totalPrice}
                            
                            .col-2.d-none.d-md-block.text-center
                                a(href="#").cart-remove 
                                    i.delete.fa.fa-times
