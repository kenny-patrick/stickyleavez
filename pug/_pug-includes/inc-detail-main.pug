form(action="#")
    .row
        .col-sm-6.col-lg-12.detail-option.mb-3
            h6.detail-option-heading Size <span>(required)</span>
            - var sizes = ['Small', 'Medium', 'Large']
            each val,index in sizes
                label.btn.btn-sm.btn-outline-secondary.detail-option-btn-label(for=`size_${index}`) 
                    | #{val}
                    input(type="radio", name="size", value=`value_${index}`, id=`size_${index}`, class="input-invisible", required)
        if (!detail3)
            .col-sm-6.col-lg-12.detail-option.mb-3
                h6.detail-option-heading Type <span>(required)</span>
                - var materials = ['Hoodie', 'College']
                each val,index in materials
                    label.btn.btn-sm.btn-outline-secondary.detail-option-btn-label(for=`material_${index}`) 
                        | #{val}
                        input(type="radio", name="material", value=`value_${index}`, id=`material_${index}`, class="input-invisible", required)

        .col-12.detail-option.mb-3
            h6.detail-option-heading Colour <span>(required)</span>

            - var coloursMultiple = false
            - var coloursRequired = true
            - var coloursSidebar = false

            include inc-component-colours.pug

        .col-12.col-lg-6.detail-option.mb-5
            label.detail-option-heading.font-weight-bold Items <span>(required)</span>
            input.form-control.detail-quantity(name="items", type='number', value="1")
            
    ul.list-inline
        li.list-inline-item
            button.btn.btn-dark.btn-lg.mb-1(type="submit") 
                i.fa.fa-shopping-cart.mr-2
                | Add to Cart
        li.list-inline-item
            a.btn.btn-outline-secondary.mb-1(href="#") 
                i.far.fa-heart.mr-2
                |Add to wishlist