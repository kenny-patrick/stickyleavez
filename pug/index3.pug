extends _pug-includes/layout.pug

block vars
    - var active = 'home'  

block content
    // Hero Section
    section
        include _pug-includes/inc-home-slider.pug

    include _pug-includes/inc-home-our-picks.pug

    section.py-6.bg-gray-100
        .container

            .row
                .col-xl-8.mx-auto.text-center.mb-5
                    h2.text-uppercase Your favourites
                    p.lead.text-muted Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.

            include _pug-includes/inc-var-shopitems.pug
            - var itemClass = 'product-slider-item'
            - var additionalButtons = false
                // Products Slider
                .owl-carousel.owl-theme.product-slider
                    each val, index in shopItems
                        if (index > 3 && index <= 12)
                            +product(val, itemClass, additionalButtons)  


    - var posts = []
    - posts.push({name: 'Pellentesque habitant morbi', image: 'img/photo/kyle-loftus-596319-unsplash.jpg', intro: 'Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae, ultricies eget, tempor sit amet, ante. Aenean ultricies mi vitae est. ', author: 'John Slim', category: 'Fashion and style'})
    - posts.push({name: 'Best books about Fashion', image: 'img/photo/marion-michele-330691-unsplash.jpg', intro: 'Vestibulum tortor quam, feugiat vitae, ultricies eget, tempor sit amet, ante.  Mauris placerat eleifend leo.', author: 'John Slim', category: 'Fashion and style'})
    - posts.push({name: 'Best books about Fashion', image: 'img/photo/kyle-loftus-589739-unsplash-cropped.jpg', intro: 'Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae.  Aenean ultricies mi vitae est. Mauris placerat eleifend leo.', author: 'John Slim', category: 'Fashion and style'})

    section.py-6
        .container

            .row
                .col-xl-8.mx-auto.text-center.mb-5
                    h3.text-uppercase From our journal
                    p.lead.text-muted Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.

            .row
                each val in posts
                    // post
                    .col-lg-4.col-6
                        .mb-30px
                            a(href="post.html")
                                img.img-fluid(src=val.image, alt="...")   
                            .mt-3
                                small.text-uppercase.text-muted #{val.category} 
                                h5.my-2
                                    a.text-dark(href="post.html") #{val.name}          
                                p.text-gray-500.text-sm.my-3
                                    i.far.fa-clock.mr-2
                                    | January 16, 2016
                                p.my-2.text-muted #{val.intro}
                                a.btn.btn-link.text-gray-700.pl-0(href="post.html") Read more
                                    i.fa.fa-long-arrow-alt-right.ml-2
                    // /post end

    include _pug-includes/inc-divider.pug
    
    include _pug-includes/inc-brands.pug